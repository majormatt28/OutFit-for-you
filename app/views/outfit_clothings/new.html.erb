<h1>Pick Your Piece(s)</h1>

<%= form_tag "/outfit_clothings" do %>
    <%= hidden_field_tag :outfit_id, @outfit.id %>
    <p><strong><%= label_tag "Choose a Top: " %>
    <%= collection_select("outfit_clothing[]", :clothing_id, @shirts, :id, :name, { include_blank: "Tops" }, { :class => "input-xlarge" } ) %></p>
    <p><strong><%= label_tag "Choose a Bottom: " %>
    <%= collection_select("outfit_clothing[]", :clothing_id, @pants, :id, :name, { include_blank: "Bottoms" }, { :class => "input-xlarge" } ) %></p>
    <p><strong><%= label_tag "Choose an Accessory: " %>
    <%= collection_select("outfit_clothing[]", :clothing_id, @accessories, :id, :name, { include_blank: "Accessories" }, { :class => "input-xlarge" } ) %></p>
    <p><strong><%= label_tag "Choose a Shoe: " %>
    <%= collection_select("outfit_clothing[]", :clothing_id, @shoes, :id, :name, { include_blank: "Shoes" }, { :class => "input-xlarge" } ) %></p>
    <%= submit_tag "Add to Outfit" %>
<% end %>

<p><%= link_to "Go Back", outfits_path %>