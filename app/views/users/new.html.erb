<h1>New User</h1>

<h1>Signup</h1>

  <% if flash[:messages] %>
    <% flash[:messages]%>
  <% end %>

<%= form_for @user do |f|%>
<%= f.label "Name: "%>
<%= f.text_field :name%>
<br>
<%= f.label "Gender: "%>
<%= f.text_field :gender %>
<br>
<%= f.label "Profile Pic: "%>
<%= f.file_field :avatar%>
<br>
<%= f.label "Email Address: "%>
<%= f.text_field :email%>
<br>
<%= f.label "Password: "%>
<%= f.password_field :password_digest%>
<br>
<%= f.submit%>
<%end%>
