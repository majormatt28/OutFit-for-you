<ul id="navbar">
  <li><a><%= link_to "My Closet", closets_path %></a></li>
  <li><a><%= link_to "Go Shopping", clothings_path %></a></li>
  <li><a><%= link_to "Edit Profile", edit_user_path %></a></li>
</ul>

<h1>My Profile</h1>

<% if flash[:messages]%>
    <%= flash[:messages] %>
<% end %>

<% if @user.avatar.attached? %>
  <img src="<%= (url_for(@user.avatar)) %>" alt="<%= @user.name %>" width="500" height="400">
<% end %>
  <br>
<h2><%= @user.name%></h2>
<br>
<h3><%= @user.gender.upcase%></h3>

<h3>My Outfits</h3>
    <% @user.outfits.each do |outfit| %>
      <p><%= link_to outfit.name, outfit_path(outfit) %></p>
      <hr>
    <% end %>


<p><%= button_to "Delete Your Profile?", user_path(@user), method: :delete %></p>

